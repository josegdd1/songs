<body>
  <h1> Canciones y Puntuaciones</h1>

  <div class="form">
    <input type="text" id="songInput" placeholder="Nombre de la canci贸n" />
    <input type="number" id="scoreInput" placeholder="Puntuaci贸n" />
    <button onclick="addSong()">Agregar</button>
  </div>

  <button id="sortButton" onclick="toggleSort()">Ordenar por puntuaci贸n 猬锔</button>

  <table id="songTable">
    <thead>
      <tr>
        <th>Canci贸n</th>
        <th>Puntuaci贸n</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody id="songBody"></tbody>
  </table>

  <script>
    let songs = JSON.parse(localStorage.getItem('songs') || '[]');
    let sortAsc = true; // Estado de orden

    const songBody = document.getElementById('songBody');
    const sortButton = document.getElementById('sortButton');

    function renderTable() {
      songBody.innerHTML = '';

      // Ordenar antes de mostrar
      const sortedSongs = [...songs].sort((a, b) =>
        sortAsc ? a.score - b.score : b.score - a.score
      );

      sortedSongs.forEach((song, index) => {
        const row = document.createElement('tr');
        row.innerHTML = `
          <td>${song.name}</td>
          <td>
            <input 
              type="number" 
              class="edit-input" 
              value="${song.score}" 
              onchange="editScore(${songs.indexOf(song)}, this.value)" />
          </td>
          <td>
            <button class="delete-btn" onclick="deleteSong(${songs.indexOf(song)})">Eliminar</button>
          </td>
        `;
        songBody.appendChild(row);
      });
    }

    function addSong() {
      const name = document.getElementById('songInput').value.trim();
      const score = parseFloat(document.getElementById('scoreInput').value.trim());
      if (name && !isNaN(score)) {
        songs.push({ name, score });
        saveAndRender();
        document.getElementById('songInput').value = '';
        document.getElementById('scoreInput').value = '';
      }
    }

    function deleteSong(index) {
      songs.splice(index, 1);
      saveAndRender();
    }

    function editScore(index, newScore) {
      songs[index].score = parseFloat(newScore);
      saveAndRender(false);
    }

    function toggleSort() {
      sortAsc = !sortAsc;
      sortButton.textContent = `Ordenar por puntuaci贸n ${sortAsc ? '猬锔' : '猬锔'}`;
      renderTable();
    }

    function saveAndRender(reset = true) {
      localStorage.setItem('songs', JSON.stringify(songs));
      renderTable();
      if (reset) {
        document.getElementById('songInput').value = '';
        document.getElementById('scoreInput').value = '';
      }
    }

    renderTable();
  </script>
</body>
</html>
